<div class="nested-fields">
  <div class="objective-set">
    <div class='form-row'>
      <div class='small-11 columns'>
        <%= f.text_field :name, :placeholder => 'Objective',:autofocus=>true,:required=>true %>
      </div>
      <div class='small-1 columns'>
        <div class="remove-links">
          <%= link_to_remove_association '', f %>
        </div>
      </div>
    </div>

    <div class="nested-title">
      Key results:
    </div>
    <div id="key_results">
      <%= f.fields_for :key_results do |kr| %>
          <%= render 'key_result_fields', :f => kr %>
      <% end %>
      <div class="links okr-field-add">
        <%= link_to_add_association 'Add key result', f, :key_results %>
      </div>
    </div>
  </div>
</div>


