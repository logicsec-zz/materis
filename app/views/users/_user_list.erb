<div class="items-list">
  <% users.each do |user| %>
      <div class="il-item">
        <a class="text-black" href="#">
          <div class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <div class="col-sm-2">
                  <%= link_to image_tag(user.image.icon, :class => 'rounded_pic pic48 '), user_path(user), :remote => true %>
                </div>
                <div class="col-sm-10">
                  <%= link_to user.name, user_path(user), :remote => true,:class=>'text-black' %><br/>
                  <%= link_to raw("#{user.employee_code}"), user_path(user), :remote => true,:class=>'font-90 text-muted' %>
                </div>
              </h6>
            </div>
          </div>
        </a>
      </div>
  <% end %>
</div>


