<% projects = Project.active if projects.nil? %>
<% projects.each do |project| %>
    <%= link_to project_path(project), :remote => true do %>
        <div class="project card-transparent transition prj-<%= project.id %>">
          <div class="cols ths">
            <%= image_tag(project.image.icon) %>
          </div>
          <div class="cols">
            <div class="project-title"><%= project.name %></div>
            <div class="text">
              <%= "#{project.team_count} #{'team'.pluralize(project.team_count)}" %>
              <%= "#{project.member_count} #{'member'.pluralize(project.member_count)}" %>
            </div>
            <div class="text">
              <%= project.website %>
            </div>
          </div>
        </div>
    <% end %>
<% end %>