<div class="card-header text-uppercase text-muted"></div>
<% teams.unarchived.each do |team| %>
    <div class="items-list">
      <div class="il-item">
        <div class="media">
          <div class="media-body">
            <div class="text-muted">
              <div class="row">
                <div class="col-sm-1">
                  <%= image_tag(team.image.icon) %>
                </div>
                <div class="col-sm-5">
                  <h6 class="media-heading">
                    <%= link_to team.name, team_path(team), :remote => false, :class => 'grey-link' %>
                  </h6>
                </div>
                <div class="col-sm-6">
                  <span class="media-heading right">
                    <span class="tag tag-teams"><%= team.members_count %> <i class="material-icons">people</i></span>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>