<% teams.unarchived.each do |team| %>
  <div class="items-list">
    <div class="il-item">
      <div class="media">
        <div class="media-body">
          <div class="text-muted">
            <div class="row">
              <div class="col-sm-1">
                <%= image_tag(team.image.icon) %>
              </div>
              <div class="col-sm-10">
                <h6 class="media-heading">
                  <%= link_to team.name, team_path(team), :remote => false, :class => 'grey-link' %>
                </h6>
              </div>
              <div class="col-sm-1">
                <span class="button alert"><span class="fi-torso"></span> <%= team.members_count %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>